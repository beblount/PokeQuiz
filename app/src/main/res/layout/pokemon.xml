<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/large_spacing"
            android:layout_marginEnd="@dimen/large_spacing"
            android:paddingStart="@dimen/normal_spacing"
            android:paddingTop="@dimen/normal_spacing"
            android:paddingEnd="@dimen/normal_spacing"
            android:paddingBottom="@dimen/normal_spacing"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:elevation="@dimen/fab_elevation"
            android:clickable="true"
            android:background="@android:color/white" >

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:paddingTop="@dimen/large_spacing"
                app:font="@{@string/pokemon_bit}"
                style="@style/Base.TextAppearance.AppCompat.Headline"
                tools:text="Pikachu" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:transitionName="@string/to_pokemon_image"
                tools:src="@drawable/ic_default_profile_avatar" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</layout>