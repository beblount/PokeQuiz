<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <android.support.design.widget.CoordinatorLayout
        tools:ignore="missingPrefix"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" >

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/huge_spacing"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:transitionName="@string/to_pokemon_image"
                tools:src="@android:drawable/btn_star_big_off" />

            <LinearLayout
                android:id="@+id/quizControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/hint"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_help_outline_black_36dp"
                    android:text="@string/quiz_hint"
                    app:font="@{@string/pokemon_bit}"
                    style="@style/Poke.Widget.InlineActionButton"
                    tools:text="2 Hints" />

                <mb.pokequiz.quiz.Timer
                    android:id="@+id/timer"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/grade"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_history_black_36dp"
                    android:text="@string/score_hint"
                    app:font="@{@string/pokemon_bit}"
                    style="@style/Poke.Widget.InlineActionButton"
                    tools:text="100%" />

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/guess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:gravity="center"
                    android:maxLines="1"
                    tools:text="Some pokemon shit"
                    app:font="@{@string/pokemon_bit}" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/failure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="@dimen/medium_spacing"
                android:paddingBottom="@dimen/medium_spacing"
                android:text="@string/failure_text"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:visibility="invisible"
                app:font="@{@string/pokemon_bit}"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/postQuizControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible" >

                <Button
                    android:id="@+id/keepPlaying"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/quiz_continue"
                    app:font="@{@string/pokemon_bit}"
                    style="@style/Base.Widget.AppCompat.Button.Borderless" />

                <Button
                    android:id="@+id/seeDetails"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/quiz_details"
                    app:font="@{@string/pokemon_bit}"
                    style="@style/Base.Widget.AppCompat.Button.Borderless" />

            </LinearLayout>

        </LinearLayout>

        <mb.pokequiz.widget.LoadingPokeball
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="@dimen/fab_elevation"
            android:visibility="invisible"
            tools:visibility="gone" />

        <mb.pokequiz.widget.ErrorView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone" />

    </android.support.design.widget.CoordinatorLayout>

</layout>
