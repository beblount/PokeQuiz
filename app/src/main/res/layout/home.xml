<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="missingPrefix" >

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" >

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:titleTextAppearance="@style/MediumText"
                app:font="@{@string/pokemon_bit}" />

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                style="@style/PokemonTitle"
                app:font="@{@string/pokemon_solid}"
                tools:text="Bulbasaur" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/hint_button"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_help_outline_black_24dp"
                    android:text="0 Hints"
                    app:font="@{@string/pokemon_bit}"
                    tools:text="0 Hints"
                    style="@style/InlineActionButton" />

                <ImageButton
                    android:id="@+id/timer_button"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_timer_black_24dp"
                    style="@style/InlineActionButton" />

                <Button
                    android:id="@+id/grade_button"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_grade_black_24dp"
                    android:text="100%"
                    app:font="@{@string/pokemon_bit}"
                    style="@style/InlineActionButton"
                    tools:text="98%" />

            </LinearLayout>

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                tools:src="@android:drawable/btn_star_big_off" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom" >

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/guess"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:gravity="center"
                            android:maxLines="1"
                            app:font="@{@string/pokemon_bit}" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_file_upload_black_24dp"
                android:layout_margin="@dimen/fab_margin"
                android:layout_gravity="bottom|end"
                app:layout_anchor="@id/root"
                app:layout_anchorGravity="bottom|end" />

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</layout>
